---
import Layout from '../layouts/Layout.astro';
import FloatingNavbar from '../components/FloatingNavbar.astro';
---

<Layout title="Apply - Onerverse">
  <main>
    <div class="relative min-h-screen bg-black text-white overflow-hidden">
      <!-- Floating navbar with liquid glass effect -->
      <FloatingNavbar />
      
      <!-- Animated gradient background -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-br from-green-900/20 via-black to-teal-900/20"></div>
        <div class="absolute top-1/4 left-1/3 w-96 h-96 bg-green-600/10 rounded-full blur-[120px] animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/3 w-96 h-96 bg-teal-600/10 rounded-full blur-[120px] animate-pulse" style="animation-delay: 2s;"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 container mx-auto px-4 py-24">
        <div class="max-w-3xl mx-auto">
          <!-- Title -->
          <div class="text-center mb-12">
            <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6">
              <span class="bg-gradient-to-r from-green-400 via-white to-teal-400 bg-clip-text text-transparent">
                Join Our Roster
              </span>
            </h1>
            <p class="text-lg md:text-xl text-white/60 max-w-2xl mx-auto leading-relaxed">
              Are you a creator, influencer, or digital artist? Apply to become part of the Onerverse collective.
            </p>
          </div>
          
          <!-- Application Form -->
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 p-8">
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">First Name</label>
                  <input type="text" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" placeholder="John" />
                </div>
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">Last Name</label>
                  <input type="text" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" placeholder="Doe" />
                </div>
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Email</label>
                <input type="email" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" placeholder="john@example.com" />
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Social Media Handle</label>
                <input type="text" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" placeholder="@johndoe" />
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Primary Platform</label>
                <select class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white focus:outline-none focus:border-white/30 transition-colors">
                  <option value="">Select a platform</option>
                  <option value="instagram">Instagram</option>
                  <option value="tiktok">TikTok</option>
                  <option value="youtube">YouTube</option>
                  <option value="twitter">Twitter/X</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Portfolio/Website URL</label>
                <input type="url" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" placeholder="https://yourportfolio.com" />
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Tell us about yourself</label>
                <textarea rows="4" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors resize-none" placeholder="Share your creative journey, achievements, and why you want to join Onerverse..."></textarea>
              </div>
              
              <div class="flex items-center">
                <input type="checkbox" id="terms" class="mr-3 w-4 h-4" />
                <label for="terms" class="text-white/60 text-sm">I agree to the terms and conditions</label>
              </div>
              
              <button type="submit" class="w-full px-6 py-3 bg-white text-black rounded-full font-medium text-sm hover:bg-white/90 transition-all hover:scale-[1.02]">
                Submit Application
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>