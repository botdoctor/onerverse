---
import Layout from '../layouts/Layout.astro';
import FloatingNavbar from '../components/FloatingNavbar.astro';
import FloatingImages from '../components/FloatingImages.astro';
---

<Layout title="Onerverse">
  <main>
    <div class="relative min-h-screen bg-black text-white overflow-hidden">
      <!-- Floating navbar with liquid glass effect -->
      <FloatingNavbar />
      
      <!-- Floating images background -->
      <FloatingImages sensitivity={-1} />
      
      <!-- Hero content -->
      <div class="relative z-10 flex flex-col items-center justify-center min-h-screen px-6">
        <!-- Subtle glow effect behind text -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-[600px] h-[600px] bg-white opacity-[0.02] blur-[150px] rounded-full"></div>
        </div>
        
        <!-- Main content -->
        <div class="relative text-center space-y-6 max-w-4xl mx-auto">
          <!-- Small badge -->
          <div class="inline-block">
            <span class="px-4 py-1.5 text-xs font-medium text-white/70 bg-white/5 backdrop-blur-sm rounded-full border border-white/10">
              Design Studio
            </span>
          </div>
          
          <!-- Main title with gradient -->
          <h1 class="text-6xl md:text-8xl font-bold tracking-tight">
            <span class="bg-gradient-to-r from-white via-white/90 to-white/60 bg-clip-text text-transparent">
              Onerverse
            </span>
          </h1>
          
          <!-- Subtitle -->
          <p class="text-lg md:text-xl text-white/60 max-w-2xl mx-auto leading-relaxed">
            Where creativity flows through infinite dimensions and ideas take shape in the void
          </p>
          
          <!-- CTA buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-6">
            <button class="px-6 py-3 bg-white text-black rounded-full font-medium text-sm hover:bg-white/90 transition-all hover:scale-105">
              Start a Project
            </button>
            <button class="px-6 py-3 bg-white/5 backdrop-blur-sm text-white rounded-full font-medium text-sm border border-white/10 hover:bg-white/10 transition-all">
              View Our Work
            </button>
          </div>
        </div>
        
        <!-- Scroll indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
          <div class="w-5 h-8 border-2 border-white/20 rounded-full flex justify-center">
            <div class="w-1 h-2 bg-white/40 rounded-full mt-1 animate-bounce"></div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  html, body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    background: black;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>