---
import Layout from '../layouts/Layout.astro';
import FloatingNavbar from '../components/FloatingNavbar.astro';
---

<Layout title="Contact - Onerverse">
  <main>
    <div class="relative min-h-screen bg-black text-white overflow-hidden">
      <!-- Floating navbar with liquid glass effect -->
      <FloatingNavbar />
      
      <!-- Animated gradient background -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-900/20 via-black to-indigo-900/20"></div>
        <div class="absolute top-1/3 left-1/4 w-96 h-96 bg-blue-600/10 rounded-full blur-[120px] animate-pulse"></div>
        <div class="absolute bottom-1/3 right-1/4 w-96 h-96 bg-indigo-600/10 rounded-full blur-[120px] animate-pulse" style="animation-delay: 2s;"></div>
      </div>
    
      <!-- Content -->
      <div class="relative z-10 flex items-center justify-center min-h-screen p-4 pt-24">
        <div class="max-w-5xl w-full">
          <div class="bg-white/5 backdrop-blur-2xl rounded-3xl shadow-2xl overflow-hidden border border-white/10">
            <div class="grid md:grid-cols-2">
              <!-- Contact Info Section -->
              <div class="p-8 lg:p-12 bg-white/5 backdrop-blur-xl">
                <h2 class="text-3xl font-bold text-white mb-4">Get in touch</h2>
                <p class="text-white/70 mb-8">
                  If you have any questions regarding our Services or need help, please fill out the form here. 
                  We do our best to respond within 1 business day.
                </p>
                
                <div class="space-y-6">
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 rounded-full bg-white/10 backdrop-blur flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="text-white/60 text-sm">Email</p>
                      <p class="text-white font-medium">contact@onerverse.com</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 rounded-full bg-white/10 backdrop-blur flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="text-white/60 text-sm">Phone</p>
                      <p class="text-white font-medium">+1 (555) 123-4567</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 rounded-full bg-white/10 backdrop-blur flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="text-white/60 text-sm">Address</p>
                      <p class="text-white font-medium">San Francisco, CA</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Contact Form Section -->
              <div class="p-8 lg:p-12">
                <form class="space-y-6">
                  <div>
                    <label for="name" class="block text-white/80 text-sm font-medium mb-2">Name</label>
                    <input 
                      type="text" 
                      id="name" 
                      name="name"
                      class="w-full px-4 py-3 bg-white/5 backdrop-blur-xl border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-all"
                      placeholder="Your name"
                    />
                  </div>
                  
                  <div>
                    <label for="email" class="block text-white/80 text-sm font-medium mb-2">Email</label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email"
                      class="w-full px-4 py-3 bg-white/5 backdrop-blur-xl border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-all"
                      placeholder="your@email.com"
                    />
                  </div>
                  
                  <div>
                    <label for="phone" class="block text-white/80 text-sm font-medium mb-2">Phone</label>
                    <input 
                      type="tel" 
                      id="phone" 
                      name="phone"
                      class="w-full px-4 py-3 bg-white/5 backdrop-blur-xl border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-all"
                      placeholder="+1 (555) 000-0000"
                    />
                  </div>
                  
                  <div>
                    <label for="message" class="block text-white/80 text-sm font-medium mb-2">Message</label>
                    <textarea 
                      id="message" 
                      name="message"
                      rows="4"
                      class="w-full px-4 py-3 bg-white/5 backdrop-blur border border-white/10 rounded-lg text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-all resize-none"
                      placeholder="Tell us how we can help..."
                    ></textarea>
                  </div>
                  
                  <button 
                    type="submit"
                    class="w-full py-3 px-4 bg-white text-black font-semibold rounded-full hover:bg-white/90 transform hover:scale-[1.02] transition-all duration-200 shadow-lg"
                  >
                    Send Message
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  input:focus, textarea:focus {
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
  }
</style>